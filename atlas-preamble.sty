\if@lists
	\RequirePackage{enumitem}
	% easily change properties of list environments

	\setlist{itemsep=0pt, labelsep=7pt, labelwidth=7pt, leftmargin=14pt, parsep=0pt, topsep=4pt}
	% -> Options (enumitem): spacings of list environments
\fi


\if@columns
